#!/bin/sh

BUILD_DIR="build"
INSTALL_PREFIX="/usr/local"
LEGACY_TRAY=false
NO_WIRELESS_SUPPORT=false

usage ()
{
	cat << EOF
\`configure' provides a very simple wrapper for a generic cmake configuration.
Those needing more flexibility should run cmake directly.

Usage: ./configure [OPTION]...

Options:
  -p, --prefix PREFIX             install files in PREFIX [/usr/local]
  -b, --build-directory BUILDDIR  build the package in BUILDDIR [./build]
  -l, --legacy-tray-icon          force compilation of the tray icon as a
                                  KSystemTrayIcon
  -w, --no-wireless-support       disable support for wireless devices
  -h, --help                      display this help and exit
EOF
}

GETOPTEST=`getopt --version`
case "$GETOPTEST" in
getopt*) # GNU getopt
	ARGS=`getopt -n configure -l prefix:,build-directory:,legacy-tray-icon,no-wireless-support,help p:b:lwh "$@"`
	;;
*) # POSIX getopt ?
	ARGS=`getopt p:b:lwh "$@"`
	;;
esac

RET=$?
if [ $RET -ne 0 ]; then
	usage
	exit 1
fi

eval set -- "$ARGS"

while [ $# -gt 0 ]; do
	case "$1" in
	-p|--prefix)
		INSTALL_PREFIX="$2"
		shift 2
		;;
	-b|--build-directory)
		BUILD_DIR="$2"
		shift 2
		;;
	-l|--legacy-tray-icon)
		LEGACY_TRAY=true
		shift 1
		;;
	-w|--no-wireless-support)
		NO_WIRELESS_SUPPORT=true
		shift 1
		;;
	-h|--help)
		usage
		exit 0
		;;
	--)
		if [ $# -gt 1 ]; then
			echo "Unknown parameter: $2"
			echo ""
			usage
			exit 1
		fi
		break
		;;
	esac
done

SOURCE_DIR=`pwd`
mkdir "$BUILD_DIR"
cd "$BUILD_DIR"
RET=$?
if [ $RET -ne 0 ]; then
	exit $RET
fi

cmake "$SOURCE_DIR" \
	-DCMAKE_INSTALL_PREFIX="$INSTALL_PREFIX" \
	-DLEGACY_TRAY_ICON=$LEGACY_TRAY \
	-DNO_WIRELESS_SUPPORT=$NO_WIRELESS_SUPPORT \
	-DCMAKE_SKIP_RPATH=ON \
	-DKDE4_USE_ALWAYS_FULL_RPATH=false \
	-DCMAKE_BUILD_TYPE=Release

RET=$?
if [ $RET -ne 0 ]; then
	echo "Error running cmake"
	exit $RET
else
	echo ""
	echo "Cmake configuration successful."
	echo "Now run: 'cd \"$BUILD_DIR\"; make; make install'"
fi
